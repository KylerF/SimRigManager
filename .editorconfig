# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = crlf

[*.ts]
quote_type = single
max_line_length = 100
indent_style = space
indent_size = 2

[*.js]
quote_type = single
max_line_length = 100
indent_style = space
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.py]
indent_size = 4
max_line_length = 100
